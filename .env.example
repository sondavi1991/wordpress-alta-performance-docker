# ===========================================
# CONFIGURAÇÕES WORDPRESS + LITESPEED + REDIS
# ===========================================

# Configurações do MySQL
MYSQL_ROOT_PASSWORD=root_secure_password_change_me_production
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress_secure_password_change_me_production

# Configurações do Redis (Cache de Alta Performance)
REDIS_PASSWORD=redis_secure_password_change_me_production
REDIS_DB=0

# Configurações do WordPress
WORDPRESS_TABLE_PREFIX=wpx_

# Configurações de domínio (para produção)
DOMAIN=localhost
SSL_EMAIL=admin@localhost

# Configurações de segurança
WP_DEBUG=false
DISALLOW_FILE_EDIT=true
AUTOMATIC_UPDATER_DISABLED=false
FORCE_SSL_ADMIN=true

# Configurações de performance
WP_MEMORY_LIMIT=512M
UPLOAD_MAX_FILESIZE=128M
POST_MAX_SIZE=128M
MAX_EXECUTION_TIME=600
MAX_INPUT_VARS=5000

# Configurações do LiteSpeed
LSWS_VERSION=latest
PHP_VERSION=lsphp82

# Configurações de backup automático
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_ENABLED=true

# Configurações regionais
TZ=America/Sao_Paulo
LANG=pt_BR.UTF-8

# Configurações de rede (avançado)
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1

# Configurações de logging
LOG_LEVEL=INFO
ENABLE_ACCESS_LOG=true
ENABLE_ERROR_LOG=true

# Configurações de otimização
OPCACHE_MEMORY=512
OPCACHE_MAX_FILES=20000
APCU_MEMORY=256

# Configurações de monitoramento
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30s 